{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug nsqrt_example (C)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/nsqrt_example_64",
      "args": ["64 8141521474260283205630710705545027648"],              // ‚Üê adjust or remove as needed
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Use Intel assembly syntax",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug nsqrt_example_cpp with args",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/nsqrt_example_cpp",
      "args": ["640", "-1"],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Use Intel assembly syntax",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
